{{% BLOCKS }}
{{< base }}

{{$ title }}View Order{{/ title }}

{{$ content}}
    <div class="container  push-down-30">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="center"><span class="light">Order</span> History</h1>
                
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{# orders }}
                        <tr>
                            <td><a href="/account/orders/{{ id }}">Order #{{ id }}</a></td>
                            <td>{{ date }}</td>
                            <td>{{ status }}</td>
                            <td>{{ cost }}</td>
                        </tr>
                    {{/ orders }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{/ content}}

{{/ base }}